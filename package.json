{
  "name": "@podium/store",
  "version": "2.1.1",
  "type": "module",
  "main": "./dist/store.js",
  "types": "./types/store.d.ts",
  "exports": {
    "types": "./types/store.d.ts",
    "require": "./dist/store.cjs",
    "import": "./dist/store.js"
  },
  "license": "MIT",
  "keywords": [
    "micro services",
    "micro frontend",
    "podium"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/podium-lib/store.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/podium-lib/issues"
  },
  "homepage": "https://podium-lib.io/",
  "files": [
    "dist",
    "types"
  ],
  "scripts": {
    "prepublishOnly": "run-s build types",
    "build": "run-p build:*",
    "build:cjs": "esbuild src/store.js --outfile=dist/store.cjs --target=es2017 --format=cjs",
    "build:esm": "esbuild src/store.js --outfile=dist/store.js --target=es2017",
    "lint": "eslint . --ignore-pattern '/dist/'",
    "lint:fix": "eslint --fix . --ignore-pattern '/dist/'",
    "test": "node --test",
    "types": "run-s types:tsc types:test",
    "types:tsc": "tsc",
    "types:test": "tsc --project tsconfig.test.json"
  },
  "dependencies": {
    "@podium/browser": "1.3.0",
    "nanostores": "0.11.4"
  },
  "devDependencies": {
    "@podium/eslint-config": "1.0.8",
    "@podium/semantic-release-config": "2.0.0",
    "@podium/typescript-config": "1.0.0",
    "@types/node": "20.17.57",
    "esbuild": "0.25.5",
    "eslint": "9.21.0",
    "jsdom": "24.0.0",
    "npm-run-all2": "6.2.6",
    "prettier": "3.5.2",
    "semantic-release": "24.1.2",
    "typescript": "5.4.5"
  }
}
